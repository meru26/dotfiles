## Aliases
# date
alias date="env LC_ALL=c date"
# cp
alias cp="cp -iv"
# mv
alias mv="mv -iv"
# rm
alias rm="rm -iv"

alias du='du -hc '
alias g++='g++ -Wall '
alias gcc='gcc -Wall '
alias ll='ls -al --color=auto'

alias ls='ls --color=auto'
alias la='ls -A'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
